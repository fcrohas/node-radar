.container-fluid.full-height(ng-init="status.openDetail=false")
	.panel.panel-primary(ng-class="{'half-height': !status.openDetail, 'max-height' : status.openDetail}")
		.panel-heading.panel-title List
		.input-group
			span.input-group-addon.glyphicon.glyphicon-search
			input.form-control(type='text',placeholder='Flight ID or Aricraft registration',ng-model="searchValue",autofocus)
		table.table.table-condensed.table-hover.full-height
			thead
				th.hidden-md.col-lg-3 Silhouette
				th.col-md-3 Callsign
				th.col-md-3 Speed (km/h)
				th.col-md-3 Altitude (m)
			tbody
				tr.animate-repeat(ng-repeat='plane in planes | filter:searchValue', ng-click='Selected();',ng-class="{'alert-info':plane.show,'':!plane.show}",tooltip="{{plane.description}}")
					td.hidden-md.col-lg-3 
						img(ng-src="{{plane.silhouette}}")
					td.col-md-3 {{plane.callsign}}
					td.col-md-3.text-center {{plane.ground_speed}}
					td.col-md-3 
						i.pull-left.glyphicon(ng-class="{'glyphicon-triangle-bottom red': (plane.vertical_rate<0),'glyphicon-triangle-top green': (plane.vertical_rate>0),'glyphicon-minus': (plane.vertical_rate==0)}")						
						.pull-right {{plane.altitude}}
	.panel.panel-primary
		.panel-heading.panel-title(ng-click="status.openDetail = !status.openDetail") Detail
			i.pull-right.glyphicon(ng-class="{'glyphicon-chevron-down': status.openDetail, 'glyphicon-chevron-right': !status.openDetail}")
		.panel-body(collapse='status.openDetail')
			div.well
				text(ng-cloak) Registration : {{planeinfo.Registration}}
				br
				text(ng-cloak) Plane type : {{planeinfo.Manufacturer}} {{planeinfo.ModelType}} ({{planeinfo.Engines}} - {{planeinfo.DesignatorType}})
				br
				text(ng-cloak) Operator : {{planeinfo.Operator}}
				br
				text(ng-if="planeinfo.Airport",ng-cloak) Flight id {{planeinfo.FlightName}} 
				text(ng-if="planeinfo.Airport",ng-cloak) from {{planeinfo.Airport.departure.AirportName}} ({{planeinfo.Airport.departure.DepartureTime}}) 
				text(ng-if="planeinfo.Airport",ng-cloak) to {{planeinfo.Airport.arrival.AirportName}} ({{planeinfo.Airport.arrival.ArrivalTime}}) 
			.hidden-xs.hidden-sm.hidden-md.carousel(interval="5000")
				slide(ng-repeat="photo in planeinfo.Photos")
					img(ng-src="{{photo.thumbnailPath}}", style="margin:auto;")
					.carousel-caption
						h4 {{planeinfo.ModelType}}
						p {{photo.author}}